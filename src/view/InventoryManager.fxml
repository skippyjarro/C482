                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                           <children>
                              <Button fx:id="addProduct" mnemonicParsing="false" onAction="#toAddProduct" text="Add" />
                              <Button fx:id="modifyProduct" mnemonicParsing="false" onAction="#toModifyProduct" text="Modify" />
                              <Button fx:id="deleteProduct" mnemonicParsing="false" onAction="#deleteProduct" text="Delete" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="exit" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" text="Exit" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" right="30.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
